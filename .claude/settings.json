{
  "permissions": {
    "allow": [
      "Bash(python3:*)",
      "Bash(ls:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(find:*)",
      "Bash(chmod:*)",
      "Bash(/usr/bin/say:*)",
      "Bash(say:*)",
      "Bash(python3 .claude/hooks/scripts/review-agent.py:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "cd ~/projects/zuzu && python3 .claude/hooks/scripts/format-on-edit.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/say 'Zuzu is online and ready for your command' -v Zarvox"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/say 'Zuzu is going offline, goodbye' -v Zarvox"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/say 'Zuzu is requesting additional permissions' -v Zarvox"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/say 'Zuzu is ready for your command' -v Zarvox"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/usr/bin/say 'Zuzu is finished' -v Zarvox"
          },
          {
            "type": "command",
            "command": "cd ~/projects/zuzu && python3 .claude/hooks/scripts/review-agent.py --silent --focus docs"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "supabase@claude-plugins-official": true,
    "typescript-lsp@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "serena@claude-plugins-official": true,
    "analytics-reporter@awesome-claude-code-plugins": true,
    "document-skills@anthropic-agent-skills": true
  }
}
