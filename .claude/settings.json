{
  "permissions": {
    "allow": [
      "Bash(python3:*)",
      "Bash(ls:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(find:*)",
      "Bash(chmod:*)",
      "Bash(python3 .claude/hooks/review-agent.py:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 .claude/hooks/review-agent.py --silent --focus docs"
          }
        ]
      }
    ]
  }
}
