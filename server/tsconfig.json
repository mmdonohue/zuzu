{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": false,
    "types": ["node"],
    "lib": ["ES2020"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist", "../node_modules", "../src"]
}